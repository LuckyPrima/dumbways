<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>

    <link rel="stylesheet" href="/css/global.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Poppins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-slate-200 min-h-screen flex items-center justify-center poppins-regular"
  >
    <div class="w-full max-w-md bg-white p-8 rounded-2xl shadow-xl">
      <h1 class="text-3xl font-semibold text-center mb-6">Login</h1>

      {{#if messages.error}}
        <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
          {{messages.error}}
        </div>
      {{/if}}
      {{#if messages.success}}
        <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
          {{messages.success}}
        </div>
      {{/if}}

      <form method="POST" action="/login" class="space-y-5">
        <div>
          <label class="block font-medium mb-1">Email</label>
          <input
            name="email"
            type="email"
            required
            class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-slate-500"
          />
        </div>

        <div>
          <label class="block font-medium mb-1">Password</label>
          <input
            name="password"
            type="password"
            required
            class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-slate-500"
          />
        </div>

        <div class="flex justify-between items-center">
          <a href="/signup" class="text-sm text-blue-500 hover:underline">
            Create account
          </a>
          <button class="bg-slate-900 text-white px-6 py-2 rounded-full">
            Login
          </button>
        </div>
      </form>
    </div>
  </body>
</html>